<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Clean Blog - Start Bootstrap Theme</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet"
        type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
        rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <%- include('../_navigacija') %>
    </nav>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('/images/knjige3.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Editiranje knjige<br><%= knjiga.naziv %></h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <!-- Post preview-->
                <div class="post-preview">

                    <form action="/knjige/<%= knjiga.id %>?_method=PUT" method="POST">
                        <label for="naziv">Naslov</label>
                        <label style="color: red">
                            <%= error %>
                        </label>
                        <input required value="<%= knjiga.naziv %>" type="text" name="naziv" id="naziv"
                            class="form-control">
                        <br>
                        <label for="godinaIzdanja">Godina izdanja</label>
                        <input required value="<%= knjiga.godinaIzdanja %>" type="date" name="godinaIzdanja" id="godinaIzdanja"
                            class="form-control" min="1997-01-01" max="2030-12-31">
                        <br>
                        <label for="jezik">Jezik</label>
                        <input required value="<%= knjiga.jezik %>" type="text" name="jezik" id="jezik"
                            class="form-control">
                        <br>
                        <label for="stranica">Stranica</label>
                        <input required value="<%= knjiga.stranica %>" type="number" name="stranica" id="stranica"
                            class="form-control">
                        <br>
                        <label for="onlineIzdanje">Online izdanje</label>
                        <input type="checkbox" name="onlineIzdanje" id="stranica" style="width: 20px; height: 20px;" <%= knjiga.onlineIzdanje %>>
                        <br><br>
                        <label for="publisher">Publisher</label>
                        <input required value="<%= knjiga.publisher %>" type="text" name="publisher" id="publisher"
                            class="form-control">
                        <br>
                        <label for="dimenzije">Dimenzija knjige</label>
                        <input value="<%= knjiga.dimenzije %>" type="text" name="dimenzije" id="dimenzije"
                            class="form-control">
                        <br>
                        <label for="kratikiSadrzaj">Kratiki sadrzaj</label>
                        <input value="<%= knjiga.kratikiSadrzaj %>" type="text" name="kratikiSadrzaj" id="kratikiSadrzaj"
                            class="form-control">
                        <br>
                        <label for="kategorija">Odaberite jednu ili vi≈°e kategorija:
                            <select name="kategorija" id="kategorija" multiple size="5" class="form-control" required>
                                <% kategorije.forEach(kategorija=> { %>
                                    <option value="<%= kategorija.id %>"><%= kategorija.naziv %></option>
                                <% }) %>
                            </select>
                        </label>
                        <br>
                        <a href="/knjige/prikazi" class="btn btn-secondary">Calcel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>

                </div>
                <!-- Divider-->
                <hr class="my-4" />
            </div>
        </div>
    </div>
    <!-- Footer-->
    <%- include('../_fotter') %>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
</body>

</html>